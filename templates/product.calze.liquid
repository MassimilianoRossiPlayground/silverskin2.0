<h3 class="title-secondary-banner">SCOPRI LA NOSTRA COLLEZIONE</h3>

<div class="secondary-banner">

  <div class="secondary-banner__box {{secondary_handle_banner_1}}__banner lazyload" data-sizes="auto" data-bgset="{{secondary_img_banner_1}}">

    <h2> {{ secondary_title_banner_1 }} </h2>

    <p>{{ collections[secondary_handle_banner_1].metafields.custom_fields["banner_description_like_second"] }}</p>

    <a class="secondary-banner__cta" href="{{secondary_link_banner_1}}">SCOPRI LA COLLEZIONE</a>

  </div>

  <div class="secondary-banner__box {{secondary_handle_banner_2}}__banner lazyload" data-sizes="auto" data-bgset="{{secondary_img_banner_2}}">

    <h2> {{ secondary_title_banner_2 }} </h2>

    <p>{{ collections[secondary_handle_banner_2].metafields.custom_fields["banner_description_like_second"] }}</p>

    <a class="secondary-banner__cta" href="{{secondary_link_banner_1}}">SCOPRI LA COLLEZIONE</a>

  </div>

</div>




